<layer-spec xmlns="urn:jboss:galleon:layer-spec:2.0" name="chroma-embedding-store">
    <props>
        <prop name="org.wildfly.category" value="Generative AI"/>
        <prop name="org.wildfly.description" value="Support for ChromaDB as an embedding store"/>
        <prop name="org.wildfly.stability" value="experimental"/>
        <prop name="org.wildfly.rule.configuration" value="https://raw.githubusercontent.com/wildfly-extras/wildfly-ai-feature-pack/refs/heads/main/doc/glow-layer-doc/chroma-embedding-store/env.yaml"/>
        <prop name="org.wildfly.rule.add-on-depends-on" value="only:ai"/>
        <prop name="org.wildfly.rule.add-on" value="ai-embedding-store,chroma-embedding-store"/>
        <prop name="org.wildfly.rule.add-on-description" value="Use Chroma as an embedding store"/>
        <prop name="org.wildfly.rule.expect-add-on-family" value="ai-embedding-model"/>
    </props>
    <dependencies>
        <layer name="ai"/>
    </dependencies>
    <packages>
        <package name="dev.langchain4j.chroma"/>
    </packages>
    <feature spec="subsystem.ai">
        <feature spec="subsystem.ai.chroma-embedding-store">
            <param name="chroma-embedding-store" value="chroma"/>
            <param name="api-version" value="${org.wildfly.ai.chroma.api-version,env.CHROMA_API_VERSION:V2}"/>
            <param name="base-url" value="${org.wildfly.ai.chroma.url,env.CHROMA_URL:http://localhost:8000}"/>
            <param name="connect-timeout" value="${org.wildfly.ai.chroma.timeout,env.CHROMA_TIMEOUT:20000}"/>
            <param name="log-requests" value="${org.wildfly.ai.chroma.log.request,env.CHROMA_LOG_REQUEST:true}"/>
            <param name="log-responses" value="${org.wildfly.ai.chroma.log.response,env.CHROMA_LOG_RESPONSE:true}"/>
        </feature>
    </feature>
</layer-spec>
